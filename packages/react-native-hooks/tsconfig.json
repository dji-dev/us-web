{
    "include": ["lib", "types"],
    "compilerOptions": {
        "module": "esnext",
        "lib": ["dom", "esnext"],
        "target": "ES2015",
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./lib",
        "outDir": "./dist",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true
    }
}
